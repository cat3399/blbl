<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/video_card_margin"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/blbl_focus_scale"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/blbl_focus_stroke"
    app:strokeWidth="2dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/video_card_text_margin"
            android:paddingHorizontal="@dimen/video_card_duration_padding_h"
            android:paddingVertical="@dimen/video_card_duration_padding_v"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@color/blbl_text"
            android:textSize="@dimen/video_card_duration_text_size"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintEnd_toEndOf="@id/iv_cover" />

        <LinearLayout
            android:id="@+id/ll_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/video_card_text_margin"
            android:paddingHorizontal="@dimen/video_card_duration_padding_h"
            android:paddingVertical="@dimen/video_card_duration_padding_v"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover">

            <ImageView
                android:id="@+id/iv_stat_play"
                android:layout_width="@dimen/video_card_stat_icon_size"
                android:layout_height="@dimen/video_card_stat_icon_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_stat_play"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="@color/blbl_text"
                android:textSize="@dimen/video_card_stat_text_size" />

            <ImageView
                android:id="@+id/iv_stat_danmaku"
                android:layout_width="@dimen/video_card_stat_icon_size"
                android:layout_height="@dimen/video_card_stat_icon_size"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_stat_danmaku"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_danmaku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:shadowColor="#CC000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="@color/blbl_text"
                android:textSize="@dimen/video_card_stat_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/video_card_text_margin"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/blbl_text"
            android:textSize="@dimen/video_card_title_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_cover" />

        <LinearLayout
            android:id="@+id/ll_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/video_card_text_margin"
            android:layout_marginBottom="@dimen/video_card_text_margin"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blbl_text_secondary"
                android:textSize="@dimen/video_card_subtitle_text_size" />

            <TextView
                android:id="@+id/tv_pubdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blbl_text_secondary"
                android:textSize="@dimen/video_card_subtitle_text_size" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
